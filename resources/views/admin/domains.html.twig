{% extends 'layout_admin.html.twig' %}
{% set admin_active = 'domains' %}

{% block admin_content %}
    <table class="table table-striped well">
        <thead>
            <tr>
                <th>ID</th>
                <th>Domain Name</th>
                <th>Games</th>
            </tr>
        </thead>
        <tbody>
            {% for domain in domains %}
                <tr>
                    <td>
                        {{ domain.id }}
                    </td>
                    <td>
                        <a href={{ path('admin_games', {'domain': domain.id }) }}>{{ domain.name }}</a>
                    </td>
                    <td>
                        {{ domain.games.count }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
